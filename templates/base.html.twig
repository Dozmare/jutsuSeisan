<!DOCTYPE html>
<html>
    <head>
		<link rel="icon" type="image/jpg" href="img/favicon.jpg"/>
				<!-- Core theme CSS (includes Bootstrap)-->
		<link href="{{asset('css/bootstrap.css')}}" rel="stylesheet"/>
		<link href="{{asset('css/style.css')}}" rel="stylesheet"/>

        <meta charset="UTF-8">
        <title>{% block title %}Jutsu Seisan!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
<body>
	<nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
			<div class="container px-4 px-lg-5">
				<a class="navbar-brand" href="{{ path('index') }}">Seisan</a>

					<ul class="navbar-nav ms-auto py-4 py-lg-0">
						{% block nav %}

							{% if is_granted('ROLE_ADMIN') %}
								<li class="nav-item">
									<a class="nav-link px-lg-3 py-3 py-lg-4" href="}">Admin</a>
								</li>
							{% endif %}

							{% if app.user %}
								<li class="nav-item">
									<span class="nav-link px-lg-3 py-3 py-lg-4">Bienvenue
										{{ app.user.username }}</span>
								</li>

								<li class="nav-item">
									<a class="nav-link px-lg-3 py-3 py-lg-4" href="{{ path('app_logout') }}">Déconnexion</a>
								</li>
							{% else %}
								<li class="nav-item">
									<a class="nav-link px-lg-3 py-3 py-lg-4" href="{{ path('app_register') }}">Inscription</a>

								</li>
								<li class="nav-item">
									<a class="nav-link px-lg-3 py-3 py-lg-4" href="{{ path('app_login') }}">Connection</a>
								</li>

							{% endif %}

						{% endblock %}
					</ul>
				</div>
			</div>
		</nav>
	</div>
		<header class="masthead" style="background-image: url('{{asset('assets/img/banner.png')}}')">
			<div class="container position-relative px-4 px-lg-5">
				<div class="row gx-4 gx-lg-5 justify-content-center">
					<div class="col-md-10 col-lg-8 col-xl-7">
						<div class="site-heading">
							<h1>Seisan</h1>
							<span class="subheading">La référence du roleplay ninja</span>
						</div>
					</div>
				</div>
			</div>
		</header>
        {% block body %}{% endblock %}
		<footer class="border-top">
				<br>
			<div class="container px-4 px-lg-5">
				<div class="row gx-4 gx-lg-5 justify-content-center">
						<div class="small text-center text-muted fst-italic">Copyright &copy; Neidra</div>

				</div>
			</div>
		</footer>
    </body>
</html>